<% content_for :title, "Logga in" %>
<% @users.each do |u| %>
  <p>
    Användare <%= u.id %>: <%= u.email %>
  </p>
<% end %>

<%= form_tag("/login", method: "post") do %>
  <div  class="form-group">
    <%= label_tag :email, "E-post" %>
    <%= email_field_tag :email, '', class: "form-control", placeholder: "E-post", type: "email" %>
  </div>
  <div  class="form-group">
    <%= label_tag :password, "Lösenord" %>
    <%= password_field_tag :password, '', class: "form-control", placeholder: "Lösenord", type: "password" %>
  </div>
  <%= submit_tag "Logga in", class: "btn btn-default" %>
<% end %>

<p>
  <%= link_to "Registrera ny användare", new_user_path %>
</p>
