<% content_for :title, "Mina API-nycklar" %>

<p>
  Du är inloggad med <%= current_user.email %>
</p>

<table class="table table-striped table-condensed table-hover table-bordered">
  <thead>
    <th>
      Applikation
    </th>
    <th>
      Nyckel
    </th>
    <th>

    </th>
  </thead>
  <tbody>
    <% current_user.keys.each do |key| %>
      <tr>
        <td>
          <%= key.application %>
        </td>
        <td>
          <%= key.api_key %>
        </td>
        <td>
          <%= link_to "Ta bort", key, method: :delete, class: "btn btn-xs btn-default", data: { confirm: "Är du säker på att du vill ta bort #{key.application}?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
